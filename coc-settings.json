{
    "yaml.schemas": {
        "kubernetes": [
            "/tmp/*/*.yaml",
            "/tmp/*/*.yml"
        ]
    },
    "cSpell.userWords": [
        "kubernetes"
    ],
    "cSpell.language": "en",
    "cSpell.enabledLanguageIds": [
        "markdown",
        "md",
        "txt",
        "plaintext"
    ],
    "cSpell.enabled": false

    ,"languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"]
        },
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": ["terraform", "tf"],
            "initializationOptions": {}
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        }
    }
}
